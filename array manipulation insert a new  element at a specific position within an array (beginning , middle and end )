#include <stdio.h>
int main() {
    int arr[100], n, value, pos;
    printf("Enter number of elements: ");
    scanf("%d", &n);
    printf("Enter %d elements:\n", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    printf("Enter the new element to insert: ");
    scanf("%d", &value);
    printf("Enter position to insert (0=Beginning, n=End): ");
    scanf("%d", &pos);
    for(int i = n - 1; i >= pos; i--) {
        arr[i + 1] = arr[i];
    }
    arr[pos] = value;
    n++;
    printf("\nArray after insertion:\n");
    for(int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    return 0;
}
